<!-- Hospital Registration -->
<div class="modal fade" id="hospitalReg" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="hospitalRegLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form onsubmit="return register('hospital')">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="hospitalRegLabel">Sign up as a Hospital</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label for="hospitalNameReg" class="form-label">Hospital Name</label>
            <input required type="text" class="form-control" id="hospitalNameReg" placeholder="BUTH">
          </div>
          <div class="mb-3">
            <label for="hospitalEmailReg" class="form-label">Email address</label>
            <input required type="email" class="form-control" id="hospitalEmailReg" placeholder="name@example.com">
          </div>
          <div class="mb-3">
            <label for="hospitalAddressReg" class="form-label">Address</label>
            <input required type="text" class="form-control" id="hospitalAddressReg" placeholder="#5 Agip Estate">
          </div>
          <div class="mb-3">
            <label for="hospitalStateReg" class="form-label">State</label>
            <input required type="text" class="form-control" id="hospitalStateReg" placeholder="Akwa Ibom">
          </div>
          <div class="mb-3">
            <label for="hospitalPasswordReg" class="form-label">Password</label>
            <input required type="password" class="form-control" id="hospitalPasswordReg" placeholder="******">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-outline-primary">Register</button>
        </div>
      </form>
    </div>
  </div>
</div>

